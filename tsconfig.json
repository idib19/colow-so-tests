{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs", 
    "outDir": "./dist",
    "rootDir": "./",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "public/main.ts"],
  "exclude": ["node_modules"]
}
